extends /_layout_base.jade

block content
  // debug variables
  // #{ JSON.stringify(posts, null, '\t') }
  // #{ JSON.stringify(posts, null, '\t') }
  for post, key in posts
    section(class='ros-post')
      header
        img
        h3: a(href='#{ post.url }')= post.title
        div(class='ros-post-meta') 
          | At #{ post.date } 
          for tag in post.tags
            a(href='\##{ tag }' class='post-category post-category-#{ tag }')= tag
      div(class='ros-post-decription')
        p= post.brief 
  